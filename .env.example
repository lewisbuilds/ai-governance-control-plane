POSTGRES_USER=mcp
# Set a strong password before running locally or in CI
POSTGRES_PASSWORD=changeme
POSTGRES_DB=mcpgov
# Public key only, optional by default
AIBOM_PUBLIC_KEY_PATH=/app/keys/aibom_public_key.pem
AIBOM_REQUIRED=false
# Governance gate SLA in milliseconds
GATE_SLA_MS=1500
# Compose will substitute this inside containers; keep in sync with the values above
DATABASE_URL=postgresql://mcp:changeme@db:5432/mcpgov

# Optional: Use a PyPI mirror for Docker builds (compose passes these as build args)
# PIP_INDEX_URL=https://your-internal-pypi/simple
# PIP_TRUSTED_HOST=your-internal-pypi

# Optional: Corporate proxy for Docker builds (compose passes these as build args)
# HTTP_PROXY=http://proxy.corp:8080
# HTTPS_PROXY=http://proxy.corp:8080
# NO_PROXY=localhost,127.0.0.1,.local
